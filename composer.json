{
  "name": "make-software/casper-php-sdk",
  "description": "PHP 7.4+ library for interacting with Casper blockchain node RPC API.",
  "type": "library",
  "license": "Apache-2.0",
  "keywords": ["casper", "rpc", "sdk", "blockchain", "node"],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-sodium": "*",
    "ext-gmp": "*",
    "deemru/blake2b": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Casper\\": "src/"
    }
  },
  "config": {
    "platform-check": false
  }
}
